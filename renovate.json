{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended"],
  "schedule": ["before 3am on sunday"],
  "timezone": "UTC",
  "prConcurrentLimit": 5,
  "labels": ["dependencies"],
  "vulnerabilityAlerts": {
    "enabled": true,
    "labels": ["security"]
  },
  "packageRules": [
    {
      "description": "Group Go version updates with minor/patch dependencies",
      "matchManagers": ["gomod"],
      "matchDepNames": ["go"],
      "matchUpdateTypes": ["minor", "patch"],
      "groupName": "go-minor-patch-updates",
      "commitMessagePrefix": "chore",
      "commitMessageTopic": "Go version to {{newVersion}}",
      "automerge": true,
      "platformAutomerge": true
    },
    {
      "description": "Group all minor and patch Go dependency updates into a single PR",
      "matchManagers": ["gomod"],
      "matchUpdateTypes": ["minor", "patch", "digest"],
      "groupName": "go-minor-patch-updates",
      "commitMessagePrefix": "chore",
      "commitMessageTopic": "Go dependencies (minor/patch)",
      "automerge": true,
      "platformAutomerge": true
    },
    {
      "description": "Separate PRs for major Go dependency updates",
      "matchManagers": ["gomod"],
      "matchUpdateTypes": ["major"],
      "commitMessagePrefix": "chore",
      "commitMessageTopic": "{{depName}} to v{{newMajor}}",
      "labels": ["dependencies", "breaking"],
      "automerge": false
    }
  ],
  "postUpdateOptions": ["gomodTidy"]
}
