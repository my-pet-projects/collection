{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "schedule": [
    "before 3am on sunday"
  ],
  "timezone": "UTC",
  "prConcurrentLimit": 5,
  "labels": [
    "dependencies"
  ],
  "vulnerabilityAlerts": {
    "enabled": true,
    "labels": [
      "security"
    ]
  },
  "packageRules": [
    {
      "description": "Enable Go version updates",
      "matchManagers": [
        "gomod"
      ],
      "matchDepNames": [
        "go"
      ],
      "rangeStrategy": "bump"
    },
    {
      "description": "Group Go version updates with minor/patch dependencies",
      "matchManagers": [
        "gomod"
      ],
      "matchDepNames": [
        "go"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "groupName": "go-minor-patch-updates",
      "automerge": true,
      "platformAutomerge": true
    },
    {
      "description": "Group all minor and patch Go dependency updates into a single PR",
      "matchManagers": [
        "gomod"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch",
        "digest"
      ],
      "groupName": "go-minor-patch-updates",
      "automerge": true,
      "platformAutomerge": true,
      "matchDepNames": [
        "!go"
      ]
    },
    {
      "description": "Separate PRs for major Go dependency updates",
      "matchManagers": [
        "gomod"
      ],
      "matchUpdateTypes": [
        "major"
      ],
      "labels": [
        "dependencies",
        "breaking"
      ],
      "automerge": false,
      "matchDepNames": [
        "!go"
      ]
    }
  ],
  "postUpdateOptions": [
    "gomodTidy"
  ]
}
