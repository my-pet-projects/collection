{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended"],
  "schedule": ["before 3am on sunday"],
  "timezone": "UTC",
  "prConcurrentLimit": 5,
  "labels": ["dependencies"],
  "vulnerabilityAlerts": {
    "enabled": true,
    "labels": ["security"]
  },
  "packageRules": [
    {
      "description": "Group all minor and patch Go dependency updates",
      "matchManagers": ["gomod"],
      "matchUpdateTypes": ["minor", "patch", "digest"],
      "groupName": "go-minor-patch-updates",
      "automerge": true,
      "platformAutomerge": true,
      "matchDepNames": ["!go"]
    },
    {
      "description": "Major Go dependency updates",
      "matchManagers": ["gomod"],
      "matchDepNames": ["!go"],
      "matchUpdateTypes": ["major"],
      "labels": ["dependencies", "breaking"],
      "automerge": false
    },
    {
      "description": "Go version updates",
      "matchManagers": ["gomod"],
      "matchDepNames": ["go"],
      "rangeStrategy": "bump",
      "groupName": "go-version",
      "labels": ["dependencies", "go-version"],
      "automerge": false
    }
  ],
  "postUpdateOptions": ["gomodTidy"]
}
